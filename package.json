{
  "name": "cover",
  "version": "1.0.0",
  "author": "OmegaRogue <omegarogue@omegavoid.codes>",
  "license": "GPL-v3.0-or-later",
  "private": true,
  "scripts": {
    "build": "yarn clean  && vite build",
    "build:dev": "vite build --watch --mode development",
    "clean": "rm -rf dist/*",
    "watch": "vite build --watch --mode development",
    "hot": "vite serve",
    "lint": "yarn lint:ts && yarn lint:json",
    "lint:ts": "eslint --no-error-on-unmatched-pattern ./build ./src --ext .ts",
    "lint:json": "eslint --no-error-on-unmatched-pattern ./static --ext .json --no-eslintrc --plugin json --rule \"json/*: error\"",
    "lint:fix": "eslint --no-error-on-unmatched-pattern ./build ./src --ext .ts --fix"
  },
  "type": "module",
  "lint-staged": {
    "*.(js|cjs|mjs)": "eslint --fix",
    "*.(json|yml|css)": "prettier --write"
  },
  "dependencies": {
    "@pixi/math": "^7.4.2",
    "remeda": "^2.6.0",
    "sortablejs": "^1.15.2",
    "nipplejs": "^0.10.2",
    "jquery-sortablejs": "^1.0.1"
  },
  "devDependencies": {
    "@types/tooltipster": "^0.0.35",
    "es-jest": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-json": "^4.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "esno": "^4.0.0",
    "gitmoji-cli": "^9.1.0",
    "gsap": "3.12.5",
    "handlebars": "4.7.8",
    "jest": "^29.7.0",
    "jest-each": "^29.7.0",
    "jquery": "3.7.1",
    "js-angusj-clipper": "^1.3.1",
    "jsdom": "^24.1.1",
    "lightningcss": "^1.23.0",
    "lint-staged": "^15.2.1",
    "peggy": "^4.0.3",
    "pixi.js": "^7.4.2",
    "prettier": "3.3.3",
    "prompts": "^2.4.2",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-view": "^1.33.9",
    "sass": "^1.77.8",
    "sass-embedded": "^1.71.1",
    "socket.io": "4.7.5",
    "socket.io-client": "4.7.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.1.0",
    "tinymce": "^7.2.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vite": "^5.4.21",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-css-export": "^3.0.0-beta.1",
    "vite-plugin-sass-dts": "^1.3.17",
    "vite-plugin-static-copy": "^2.3.2",
    "yargs": "^17.7.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.3",
    "typescript": "5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0"
  }
}
